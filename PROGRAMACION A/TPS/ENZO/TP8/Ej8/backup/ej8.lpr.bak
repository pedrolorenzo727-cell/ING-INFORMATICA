program ej8;
const
  maxElem = 100;

type
  TM = array[1..maxElem,1..maxElem] of integer;
  TV = array[1..maxElem] of integer;

procedure leerMatriz (var mat : TM; var n, m : byte);
var
  archE : text;
  i, j : byte;
begin
  assign(archE, 'Entrada.txt');
  reset(archE);
  readln(archE, n,m);
  for i := 1 to n do
  begin
      for j := 1 to m do
          read(archE, mat[i,j]);
      readln(archE);
  end;
  close(archE);
end;

